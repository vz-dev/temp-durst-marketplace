{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Update deposit #' ~ idDeposit   %}

{% block action %}
    {{ backActionButton('/merchant-management/deposit', 'List Deposits' | trans) }}
    {{ createActionButton('/merchant-management/deposit/create', 'Add Deposit' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(depositForm) }}
            {{ form_widget(depositForm) }}

            <input type="submit" class="btn btn-primary" value="{{ 'Update' | trans }}" />
            {{ form_end(depositForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
