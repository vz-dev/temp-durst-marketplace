{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Update Salutation #' ~ idSalutation   %}

{% block action %}
    {{ backActionButton('/merchant-management/salutation', 'List Salutations' | trans) }}
    {{ createActionButton('/merchant-management/salutation/create', 'Add Salutation' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <input type="submit" class="btn btn-primary" value="{{ 'Update' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
