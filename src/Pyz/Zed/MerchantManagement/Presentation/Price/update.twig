{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Update price of product ' ~ skuProduct ~ ' for branch #' ~ idBranch   %}

{% block action %}
    {{ backActionButton('/merchant/price', 'List Prices' | trans) }}
    {{ createActionButton('/merchant/price/create', 'Add Price' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(priceForm) }}
            {{ form_widget(priceForm) }}

            <input type="submit" class="btn btn-primary" value="{{ 'Update' | trans }}" />
            {{ form_end(priceForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
