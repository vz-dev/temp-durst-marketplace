<small>
    <strong>{{ address.salutation }} {{ address.firstName }} {{ address.lastName }}</strong><br/>
    {% if address.company != '' %}
        {{ address.company }}<br />
    {% endif %}
    {% set country = 'countries.iso.' ~ address.iso2code %}
    {{ address.address1 }} {{ address.address2 }},
    {{ address.zipCode }} {{ address.city }}, {{ country | trans }} <br/>
    {% if address.phone != '' %}
        {{ address.phone }}<br />
    {% endif %}
</small>
